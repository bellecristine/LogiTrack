const mongoose = require('mongoose');

const orderSchema = new mongoose.Schema({
  origin: {
    type: String,
    required: true,
  },
  destination: {
    type: String,
    required: true,
  },
  client: {
    type: String,
    required: true,
  },
  cargoType: {
    type: String,
    required: true,
  },
  status: {
    type: String,
    enum: ['em processamento', 'em rota', 'entregue', 'cancelado'],
    default: 'em processamento',
  },
}, {
  timestamps: true
});

module.exports = mongoose.model('Order', orderSchema);
