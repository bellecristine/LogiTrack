# ==========================================
# CONFIGURAÇÕES DO SERVIÇO DE NOTIFICAÇÃO
# ==========================================

# Configurações do Servidor
PORT=3003
NODE_ENV=development

# ==========================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ==========================================

# MongoDB - CONFIGURE CONFORME SEU AMBIENTE
MONGODB_URI=mongodb://localhost:27017/logitrack_notifications
MONGODB_TEST_URI=mongodb://localhost:27017/logitrack_notifications_test

# Redis - CONFIGURE CONFORME SEU AMBIENTE
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# CONFIGURAÇÕES DE E-MAIL - ⚠️ OBRIGATÓRIO
# ==========================================

# Gmail (Recomendado para desenvolvimento)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=SEU-EMAIL@gmail.com
EMAIL_PASS=SUA-SENHA-DE-APP-DO-GMAIL

# SendGrid (Recomendado para produção)
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASS=SUA-API-KEY-DO-SENDGRID

# Outlook/Hotmail
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# EMAIL_USER=SEU-EMAIL@outlook.com
# EMAIL_PASS=SUA-SENHA

# ==========================================
# CONFIGURAÇÕES DE SEGURANÇA - ⚠️ OBRIGATÓRIO
# ==========================================

# JWT Secret - GERE UMA CHAVE FORTE!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=SUBSTITUA-POR-UMA-CHAVE-SECRETA-MUITO-FORTE-E-ALEATORIA
JWT_EXPIRES_IN=24h

# ==========================================
# CONFIGURAÇÕES DO SOCKET.IO
# ==========================================

# CORS Origins - Adicione seus domínios
SOCKET_IO_CORS_ORIGIN=http://localhost:3000,http://localhost:4200,http://localhost:8080
SOCKET_IO_PATH=/socket.io

# ==========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ==========================================

# Máximo de e-mails por hora (ajuste conforme necessário)
EMAIL_RATE_LIMIT_MAX=100
EMAIL_RATE_LIMIT_DURATION=3600000

# ==========================================
# CONFIGURAÇÕES DE LOGS
# ==========================================

LOG_LEVEL=info
LOG_FILE=logs/notification-service.log

# ==========================================
# URLs DOS OUTROS SERVIÇOS
# ==========================================

AUTH_SERVICE_URL=http://localhost:3001
TRACKING_SERVICE_URL=http://localhost:3002
API_GATEWAY_URL=http://localhost:3000

# ==========================================
# CONFIGURAÇÕES DE CAMPANHAS
# ==========================================

# Intervalo de processamento de campanhas (formato cron)
CAMPAIGN_PROCESSING_INTERVAL=*/5 * * * *
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=60000 